<div class="container">
  <div class="welcomeHeader">Welcome {{doctor.username}}</div>
  <div class="card-body">
    <form>
      <div class="mb-3">
        <label for="patientNameField" class="form-label">Patient Name:</label>
        <input type="text" class="form-control" id="patientNameField" aria-describedby="emailHelp">
      </div>
      <div class="mb-3">
        <label for="illnessField" class="form-label">Illness:</label>
        <input type="text" class="form-control" id="illnessField" aria-describedby="emailHelp">
      </div>
      <div class="mb-3">
            <label for="doctorNotesField" class="form-label">Notes:</label>
            <input type="text" class="form-control" id="doctorNotesField" aria-describedby="emailHelp">
          </div>
      <button type="submit" class="btn btn-primary d-grid col-2 mx-auto" id="addPatientBtn">Add Patient</button>
    </form>
  </div>
</div>
</div>

<div class="container">
  <div class="row justify-content-evenly">
    {{#each doctorPatients as |patient| }}
    {{#if patient.hasBeenSeen}}
    <div class="card mb-3 col-4 patientCard" style="max-width: 18rem;">
      <div class="card-header">{{patient.patientName}}</div>
      <div class="card-body">
        <h5 class="card-title">{{patient.illness}}</h5>
        <p class="card-text">{{patient.doctorNotes}}</p>       
      </div>
      <button class="btn btn-primary d-grid col-12 mb-2 mx-auto addNotes" id="addNotesBtn" data-id={{patient.patientId}} data-bs-toggle="modal" data-bs-target="#exampleModal">Add Notes</button>
    </div>
    {{else}}
    <div class="card mb-3 col-4 patientCard" style="max-width: 18rem;">
      <div class="card-header">{{patient.patientName}}</div>
      <div class="card-body">
        <h5 class="card-title">{{patient.illness}}</h5>
        <p class="card-text">{{patient.doctorNotes}}</p>
      </div>
      <button class="btn btn-primary d-grid col-12 mb-2 mx-auto addNotes" id="addNotesBtn" data-id={{patient.patientId}} data-bs-toggle="modal" data-bs-target="#patient-modal">Add Notes</button>
    </div>    
    {{/if}}
    {{/each}}
  </div>
</div>

<div class="modal fade" id="patient-modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="pm-patientName">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">        
        <h2 id="pm-patientIllness"></h2>
        
    <input class="newNote" id="newNoteid" type="input"/>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id="saveNotesBtn">Save changes</button>
      </div>
    </div>
  </div>
</div>

